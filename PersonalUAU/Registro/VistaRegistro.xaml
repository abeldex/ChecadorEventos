<Window x:Class="PersonalUAU.Registro.VistaRegistro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Huella" Height="419.756" Width="749.536" WindowStartupLocation="CenterScreen" Closing="Window_Closing" WindowStyle="None">
    <Grid Margin="0,0,0,-8">

        <GroupBox x:Name="gbxRegistro" Header="Registro de Huella" Margin="10,10,10,0" BorderThickness="1" FontSize="14" Height="393" VerticalAlignment="Top">
            <WrapPanel Margin="10,10,10,5">
                <RichTextBox x:Name="txtSalida" x:FieldModifier="public" VerticalScrollBarVisibility="Visible" Height="262" Width="400" Margin="7,10,0,0" FontSize="18" IsReadOnly="True" TextChanged="txtSalida_TextChanged">
                    <FlowDocument>
                        <Paragraph/>
                    </FlowDocument>
                </RichTextBox>
                <Image x:Name="picHuella"  Height="262" Width="260" Margin="7,10,0,0" Source="/PersonalUAU;component/img/fb.jpg"/>
                
                <Button x:Name="btnCancelar" Content="Cancelar" Height="34" Width="165" Margin="10,10,0,0" Click="Button_Click"/>
            </WrapPanel>
        </GroupBox>
    </Grid>
</Window>
